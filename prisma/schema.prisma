// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  MEMBER
  WALIKELAS
}

enum BorrowStatus {
  ACTIVE
  RETURNED
  OVERDUE
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  username  String   @unique
  password  String
  name      String
  kelas     String?
  role      Role     @default(MEMBER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  borrowings      Borrowing[]
  readingProgress ReadingProgress[]
}

model Bookshelf {
  id          String   @id @default(cuid())
  name        String   @unique
  location    String?
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  books Book[]
}

model Book {
  id          String   @id @default(cuid())
  isbn        String   @unique
  title       String
  author      String
  publisher   String
  year        Int
  category    String
  stock       Int
  coverImage  String?
  bookshelfId String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  bookshelf  Bookshelf?  @relation(fields: [bookshelfId], references: [id])
  borrowings Borrowing[] @relation("BorrowedBook")
  readingProgress ReadingProgress[]
}

model Borrowing {
  id     String @id @default(cuid())
  userId String
  bookId String

  borrowDate DateTime     @default(now())
  dueDate    DateTime
  returnDate DateTime?
  fine       Float        @default(0)
  status     BorrowStatus @default(ACTIVE)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  book Book @relation("BorrowedBook", fields: [bookId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([bookId])
}

model ReadingProgress {
  id          String   @id @default(cuid())
  userId      String
  bookId      String
  currentPage Int      @default(0)
  totalPages  Int      @default(0)
  notes       String?
  startedAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  book Book @relation(fields: [bookId], references: [id], onDelete: Cascade)

  @@unique([userId, bookId])
  @@index([userId])
  @@index([bookId])
}
