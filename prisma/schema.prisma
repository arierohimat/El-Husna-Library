// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  MEMBER
}

enum BorrowStatus {
  ACTIVE
  RETURNED
  OVERDUE
}

enum PenaltyType {
  ANALYSIS_TASK
  FINE
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  username  String   @unique
  password  String
  name      String
  role      Role     @default(MEMBER)
  phone     String?
  address   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  borrowings Borrowing[]
}

model Book {
  id         String   @id @default(cuid())
  isbn       String   @unique
  title      String
  author     String
  publisher  String
  year       Int
  category   String
  stock      Int
  coverImage String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // relasi buku yang dipinjam
  borrowings Borrowing[] @relation("BorrowedBook")

  // relasi buku analisis
  penaltyUsages Borrowing[] @relation("PenaltyBook")
}

model Borrowing {
  id            String  @id @default(cuid())
  userId        String
  bookId        String
  penaltyBookId String?

  borrowDate  DateTime     @default(now())
  dueDate     DateTime
  returnDate  DateTime?
  fine        Float        @default(0)
  status      BorrowStatus @default(ACTIVE)
  penaltyType PenaltyType?
  penaltyNote String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  // buku yang dipinjam
  book Book @relation("BorrowedBook", fields: [bookId], references: [id], onDelete: Cascade)

  // buku analisis (konsekuensi)
  penaltyBook Book? @relation("PenaltyBook", fields: [penaltyBookId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([bookId])
  @@index([penaltyBookId])
}
